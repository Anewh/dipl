{% extends 'base.html.twig' %}

{% block title %}Все команды
{% endblock %}

{% block body %}
	<main class="container-fluid py-3">
		<div class="row">
			<div class="col-sm-1"></div>
			<div class="col-sm-4">
				<h1>Все команды</h1>
				<ol class="list-group list-group-numbered">
					{% for team in teams %}
						<a href="{{ path('app_team_show', {'id': team.id}) }}" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
							<li class=" d-flex justify-content-between align-items-start">
								<div class="ms-2 me-auto">
									<div class="fw-bold">{{ team.name }}</div>
								</div>
							</li>
						</a>
					{% endfor %}
				</ol>
			</div>
		</div>
	</main>
{% endblock %}
